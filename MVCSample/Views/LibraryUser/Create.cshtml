@model UserEntity.User

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "LibraryUser", FormMethod.Post))
{
    <table border="1" cellpadding="10">
        <tr>
            <td>
                @Html.Label("UserName");
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.userName);
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Name");
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.name);
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("User Email-Id");
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.email);
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "LibraryUser");
            </td>
            <td>
                <input type="submit" id="Add" />
            </td>
        </tr>

    </table>
}

